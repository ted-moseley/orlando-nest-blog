{{ define "main" }}
<main class="container mx-auto px-6 py-10">
  <h1 class="text-4xl font-bold mb-4">Welcome to Orlando Nest Blog</h1>
  <p class="mb-6">Your go-to source for Orlando real estate insights, neighborhoods, and lifestyle content.</p>

  <h2 class="text-2xl font-semibold mt-8 mb-2">Latest Posts</h2>
  <ul class="list-disc pl-5">
    {{ range (where .Site.RegularPages "Type" "blog") }}
      <li><a href="{{ .RelPermalink }}" class="text-blue-600 hover:underline">{{ .Title }}</a></li>
    {{ end }}
  </ul>
</main>
{{ end }}

