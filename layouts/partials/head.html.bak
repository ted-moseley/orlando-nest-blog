{{/* Optional analytics partial. Will silently skip if not present. */}}
{{ with partial "analytics" . }}{{ end }}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<!-- Page Title -->
<title>{{ if .Title }}{{ .Title }} | {{ .Site.Title }}{{ else }}{{ .Site.Title }}{{ end }}</title>

<!-- SEO Meta Description -->
{{ if .IsHome }}
  <meta name="description" content="Orlando Nest Blog â€“ Real estate insights, community spotlights, and local lifestyle 
content for Orlando and Central Florida.">
{{ else if .Params.description }}
  <meta name="description" content="{{ .Params.description }}">
{{ end }}

<!-- Favicon (optional) -->
<link rel="icon" type="image/png" href="/favicon.png">

<!-- Tella styles (Tailwind via CDN or inline from theme) -->
{{ $css := resources.Get "css/main.css" }}
{{ with $css }}
  {{ $styles := . | css.PostCSS | resources.Minify | resources.Fingerprint }}
  <link rel="stylesheet" href="{{ $styles.RelPermalink }}" integrity="{{ $styles.Data.Integrity }}">
{{ else }}
  <!-- CSS not found: css/main.css -->
{{ end }}

<link rel="stylesheet" href="{{ $styles.RelPermalink }}" integrity="{{ $styles.Data.Integrity }}">

<!-- Additional head content -->
{{ block "head_extra" . }}{{ end }}

